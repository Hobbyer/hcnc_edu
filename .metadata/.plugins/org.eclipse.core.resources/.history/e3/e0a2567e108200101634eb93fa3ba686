<mapper namespace="sample.mapper.MainMapper">
	<select id="selectUser" parameterType="java.util.Map" resultType="java.util.Map">
		SELECT USER_ID
			FROM USERS
			WHERE 1=1
				AND USER_ID = #{user_id}
	</select>
</mapper>