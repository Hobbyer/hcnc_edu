package sample.web;

import java.util.Map;

import org.apache.commons.collections.map.HashedMap;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;

import com.nexacro.uiadapter17.spring.core.annotation.ParamDataSet;
import com.nexacro.uiadapter17.spring.core.data.NexacroResult;

import sample.service.MainService;

@Controller
public class MainController {
	
	@Autowired
	private MainService mainService;
	
	@RequestMapping(value="/selectUser.do")
	public NexacroResult selectUser(@ParamDataSet(name="ds_user", required = false) Map<String, Object> dsUser) {
		
		System.out.println(dsUser);
		
		NexacroResult result = new NexacroResult();
		
		try {
			boolean userCheck = mainService.selectUser(dsUser);
			
			if (userCheck) {
				result.addDataSet("ds_login", userCheck);
			} else {
				result.addDataSet("ds_login", "로그인 실패");
			}
		} catch(Exception e) {
			System.out.println("오류발생!");
			result.setErrorCode(-1);
			result.setErrorMsg("catch 오류>>>>");
		}
		
		return result;
	}
	 
}
