<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="sample.mapper.MainMapper">
	<select id="selectUser" parameterType="java.util.Map" resultType="java.util.HashMap">
		SELECT USER_ID, PASS, SALT
			FROM USERS
			WHERE 1=1
				AND USER_ID = #{user_id}
	</select>
	
	<select id="joinUser" parameterType="java.util.HashMap" resultType="java.util.HashMap">
		SELECT USER_ID
			FROM USERS
			WHERE 1=1
				AND USER_ID = #{user_id}
	</select>
</mapper>