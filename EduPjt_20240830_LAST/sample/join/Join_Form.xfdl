	var addrChk = this.join_user.get(0, "user_addrChk");
	var recommend = this.join_user.get(0, "user_recommend");
	
	var strSvcID = "joinUser";	  // 트랜잭션 아이디
	var strUrl = "svc::joinUser.do"; // 컨트롤러에 보내는거
